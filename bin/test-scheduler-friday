#!/usr/bin/env bash

WEEKDAY=$(date +%A)
if [ "${WEEKDAY}" != "Friday" ]; then
	echo "Skipping execution because today isn't Thursday"
	exit 0
fi

# Command that will randomly fail/pass to simulate errors in Lottery
if python -c "import random; exit(random.choice([0, 1]))"; then
	python website/manage.py sendtestemail ryanwilsonperkin+success@gmail.com
else
	python website/manage.py sendtestemail ryanwilsonperkin+failure@gmail.com
fi
